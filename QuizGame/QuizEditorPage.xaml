<Page x:Class="QuizGame.QuizEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizGame"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="400"
      Title="QuizEditorPage"
      Background="White">

    <Grid  Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Title-->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Margin="2 8 2 2" >
            <TextBlock Text="Welcome to Quiz Editor! Here you can" TextWrapping="Wrap" FontWeight="Bold" FontSize="30" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        </Border>

        <!--Create quiz section-->
        <StackPanel Grid.Row="1" >
            <TextBlock Text="Create your own quiz starting with a new quiz category here:" TextWrapping="Wrap" Margin="20 20 20 0" FontSize="18" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
            <TextBox x:Name="NewQuizCategory" Height="30" Margin="20 5 20 10"/>
            <Button x:Name="CreateQuizChoiceButton" Content="Create New Quiz"  Margin="20 0" FontSize="20" Padding="50" FontWeight="Bold" Foreground="White" Background="#c63719" BorderBrush="#c63719" Click="CreateNewQuiz_Click"/>
        </StackPanel>

        <!--Create quiz feedback-->
        <TextBlock Grid.Row="2" Text=" " TextWrapping="Wrap" Margin="20 10" FontSize="18" HorizontalAlignment="Center"  VerticalAlignment="Center"/>

        <!--Edit quiz section-->
        <Border Grid.Row="3" Grid.ColumnSpan="2" Margin="2 0 2 2"  BorderBrush="Gray" BorderThickness="0,1,0,0" >
            
            <TextBlock Text="or you can" TextWrapping="Wrap" FontWeight="Bold" FontSize="30" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        </Border>

        <StackPanel Grid.Row="4" >
            <TextBlock Text="Edit any existing quiz here:" TextWrapping="Wrap" Margin="20 20 20 0" FontSize="18" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
            <Button x:Name="AddQuestionChoiceButton" Content="Add new question to Quiz" FontSize="20" Padding="20" Margin="20 10 20 0"  FontWeight="Bold"  BorderBrush="LightGray" Click="AddExisitQuiz_Click" />
            <Button x:Name="EditQuizChoiceButton" Content="Edit exisiting question in Quiz" FontSize="20" Padding="20" Margin="20 10 20 0" FontWeight="Bold"  BorderBrush="LightGray" Click="EditExisitQuiz_Click" />
        </StackPanel>

    </Grid>
</Page>
