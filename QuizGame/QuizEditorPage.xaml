<Page x:Class="QuizGame.QuizEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizGame"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="400"
      Title="QuizEditorPage"
      Background="White">

    <Grid  Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/><!--Title-->
            <RowDefinition Height="2*"/><!--Create quiz section-->
            <RowDefinition Height="auto"/><!--Create feedback-->
            <RowDefinition Height="*"/><!--Load json section-->
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!--Title-->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Margin="2 8 2 12" >
            <TextBlock Text="Welcome to Quiz Editor!" TextWrapping="Wrap" FontWeight="Bold" FontSize="30" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        </Border>

        <!--Create quiz section-->
        <StackPanel Grid.Row="1" Margin="0 10 0 0"  >
            <Border BorderBrush="Gray" BorderThickness="0,1,0,0" />
            <TextBlock Text="Start from scratch" TextWrapping="Wrap" FontWeight="Bold" FontSize="25" Margin="20 20 20 0" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
            <TextBlock Text="Enter quiz name" TextWrapping="Wrap" Margin="20 5 20 0" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
            <TextBlock Text="Example: CityQuiz" TextWrapping="Wrap" Margin="20 4" FontSize="12"  Foreground="Gray" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
            <TextBox x:Name="NewQuizCategory" Height="30" Margin="20 5 20 5"/>
            <Button x:Name="CreateQuizChoiceButton" Content="Create New Quiz"  Margin="20 5 20 0" FontSize="20" Padding="15" FontWeight="Bold" Foreground="White" Background="#c63719" BorderBrush="#c63719" Click="CreateNewQuiz_Click"/>
            <TextBlock Text="Add question to the quiz created above" TextWrapping="Wrap" Margin="20 20 20 0" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
            <Button x:Name="AddQuestionChoiceButton" Content="Add new question" FontSize="20" Padding="20" Margin="20 10 20 0"  FontWeight="Bold" Foreground="White" Background="#c63719"  BorderBrush="#c63719" Click="AddQuestion_Click" />
        </StackPanel>

        <!--Create quiz feedback-->
        <TextBlock Grid.Row="2" x:Name="CreateStatusTextBlock" TextWrapping="Wrap" Margin="20 10 20 5" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"  VerticalAlignment="Center"/>

        <!--Load json section-->
        <StackPanel Grid.Row="3" >
            <Border BorderBrush="Gray" BorderThickness="0,1,0,0" />
            <TextBlock Text="Or you have read-made quiz" TextWrapping="Wrap" Margin="20 20 20 0" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
            <Button x:Name="EditQuizChoiceButton" Content="Load or Edit Quiz from JSON" FontSize="20" Padding="20" Margin="20 10 20 0" FontWeight="Bold" Foreground="White" Background="#6f86d6"  BorderBrush="#6f86d6" Click="EditExisitQuiz_Click" />
        </StackPanel>

        <!--Return Button-->
        <Button Grid.Row="5" Grid.Column="1" x:Name="ReturnButton" Content="Return"  Margin="20 0" FontSize="12"  FontWeight="Medium" BorderBrush="Gray" Click="Return_Click"/>

    </Grid>
</Page>
