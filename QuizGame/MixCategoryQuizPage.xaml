<Page x:Class="QuizGame.MixCategoryQuizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizGame"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="400"
      Title="MixCategoryQuizPage"  
      Background="White"
  >

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/><!--Title-->
            <RowDefinition Height="*"/><!--Choose a quiz category-->
            <RowDefinition Height="auto"/><!--Shuffle Button-->
            <RowDefinition Height="auto"/><!--Feedback-->
            <RowDefinition Height="auto"/><!--Return Button-->
        </Grid.RowDefinitions>

        <!--Title-->
        <Border Grid.Row="0"  Margin="2 8 2 2" >
            <TextBlock Text="Shuffle quizzes" TextWrapping="Wrap" FontWeight="Bold" FontSize="30" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        </Border>

        <!--Choose quiz category-->
        <StackPanel Grid.Row="1" x:Name="CategoryCheckboxContainer"  Margin="20 20 20 0">
            <TextBlock Text="Choose quiz category (at least 2)" TextWrapping="Wrap" Margin="0 0 0 10" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        </StackPanel>

        <!--Shuffle Button-->
        <Button Grid.Row="2" x:Name="ShuffleButton" Content="Shuffle the selected quizzes!"  Margin="20 10" Padding="20" FontSize="18"  FontWeight="Medium" Foreground="white" Click="LoadMixedQues_Click" Cursor="Hand">
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2a1b7d" Offset="0.0"/>
                    <GradientStop Color="#b69bc5" Offset="0.25"/>
                    <GradientStop Color="#2a1b7d" Offset="0.75"/>
                    <GradientStop Color="#b69bc5" Offset="1.0"/>
                </LinearGradientBrush>
            </Button.Background>

            <Button.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2a1b7d" Offset="0.0"/>
                    <GradientStop Color="#b69bc5" Offset="0.45"/>
                    <GradientStop Color="#2a1b7d" Offset="0.75"/>
                    <GradientStop Color="#b69bc5" Offset="1.0"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
          </Button>

        <!--Feedback-->
        <TextBlock Grid.Row="3" x:Name="ShuffleFeedback"  TextWrapping="Wrap" Margin="20 5" FontSize="15" Foreground="Red" HorizontalAlignment="center"  VerticalAlignment="Center"/>
        
        <!--Return Button-->
        <Button Grid.Row="4" x:Name="ReturnButton" Content="Return"  Margin="20 0" FontSize="12"  FontWeight="Medium" BorderBrush="Gray" Click="Return_Click" Cursor="Hand"/>

    </Grid>
</Page>
