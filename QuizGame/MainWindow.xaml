<Window x:Class="QuizGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="400">
    <Grid Margin="12">
        <Grid.RowDefinitions> 
            <RowDefinition Height="auto"/> 
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions> 
            <ColumnDefinition Width="*"/> 
            <ColumnDefinition Width="*"/> 
        </Grid.ColumnDefinitions>

        <!--Logo-->
        <Border Grid.Row="0"  Margin="2" BorderBrush="Gray" BorderThickness="2" Background="LightGray">
            <TextBlock Text="Logo" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!--Title-->
        <Border Grid.Row="1" Grid.ColumnSpan="2" Margin="2" >
            <TextBlock Text="CHOOSE A CATEGORY LET'S START THE QUIZ GAME" TextWrapping="Wrap" FontWeight="Bold" FontSize="30" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        </Border>

        <!--Empty-->
        <Border Grid.Row="2" Grid.ColumnSpan="2" >
            <TextBlock  />
        </Border>
        
        <!--Category 1-->
        <Border Grid.Row="3"  Grid.ColumnSpan="2" Margin="2" BorderBrush="Gray" BorderThickness="2" Background="LightGray">
            <TextBlock Text="Category 1" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
        
        <!--Category 2-->
        <Border Grid.Row="4" Grid.ColumnSpan="2" Margin="2" BorderBrush="Gray" BorderThickness="2" Background="LightGray">
            <TextBlock Text="Category 2" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>

    </Grid>
</Window>
