<Window x:Class="QuizGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="12">
        <Grid.RowDefinitions> 
            <RowDefinition Height="*"/> 
            <RowDefinition Height="*"/> 
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions> 
            <ColumnDefinition Width="2*"/> <!--Questions-->
            <ColumnDefinition Width="*"/> <!--Answer-->
        </Grid.ColumnDefinitions>

        <!--Image-->
        <Border Grid.Row="0" Grid.RowSpan="3" Margin="10" BorderBrush="Gray" BorderThickness="2" Background="LightGray">
            <TextBlock Text="Image" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!--Question Text-->
        <Border Grid.Row="3" Grid.RowSpan="3" Margin="10" BorderBrush="Gray" BorderThickness="2" Background="LightGray">
            <TextBlock Text="Question Text" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!--Answer 1-->
        <Border Grid.Column="1" Grid.RowSpan="2" Margin="10 40 10 10" BorderBrush="Gray" BorderThickness="2" Background="LightGray">
            <TextBlock Text="Answer 1" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
        <!--Answer 2-->
        <Border Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Margin="10 25 10 25" BorderBrush="Gray" BorderThickness="2" Background="LightGray">
            <TextBlock Text="Answer 2" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
        <!--Answer 3-->
        <Border Grid.Column="1" Grid.Row="4" Grid.RowSpan="2" Margin="10 10 10 40" BorderBrush="Gray" BorderThickness="2" Background="LightGray">
            <TextBlock Text="Answer 3" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>

    </Grid>
</Window>
