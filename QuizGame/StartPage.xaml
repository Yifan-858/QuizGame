<Page x:Class="QuizGame.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizGame"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="400"
      Title="StartPage"
      Background="White">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="0.8*"/>
            
            
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Logo-->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Margin="2">
            <TextBlock Text="Quiz Game Generator" FontSize="20
                       " FontWeight="Black" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#2a1b7d" />
        </Border>

        <!--Title-->
        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Margin="2 2" VerticalAlignment="Center" Text="Choose one mode to begin" TextWrapping="Wrap" FontWeight="Bold" FontSize="16" HorizontalAlignment="Left" Foreground="#b69bc5"/>
        

        <!--Default quiz subtitle-->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Margin="0 30 0 8" 
        Background="#2a1b7d" CornerRadius="15">
            <StackPanel VerticalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>

                <TextBlock Text="Quick Start Mode: play built-in quiz" TextWrapping="Wrap" FontWeight="Bold" FontSize="15" Foreground="White" HorizontalAlignment="Left"  VerticalAlignment="Center"  Margin="20 8"/>

                <Button Content="Snack Quiz" Margin="100 10" Padding="20 8" FontSize="14" FontWeight="Bold" Foreground="#2a1b7d" Background="#eee6f5" BorderBrush="#eee6f5" Click="Category_Click" Tag="Snack Quiz" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Cursor="Hand" />

                <Button Content="World Game Quiz" Margin="100 10" Padding="20 8" FontSize="14" FontWeight="Bold" Foreground="#2a1b7d" Background="#eee6f5" BorderBrush="#eee6f5" Click="Category_Click" Tag="Game Quiz" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Cursor="Hand" />

            </StackPanel>
        </Border>

        <!--Quiz Editor-->
        <Border Grid.Row="3" Grid.ColumnSpan="2" Margin="0 8" 
        Background="#2a1b7d" CornerRadius="15" >
            <StackPanel>
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>

                <TextBlock  Grid.Row="3" Grid.ColumnSpan="2" Text="Editor Mode: add your own quiz" TextWrapping="Wrap" FontWeight="Bold" FontSize="15" Foreground="White" HorizontalAlignment="Left"  VerticalAlignment="Center"  Margin="20 8" />

                <Button Content="Quiz Editor" Margin="50 10" Padding="30 15" FontSize="15" FontWeight="Bold" Foreground="#2a1b7d" Background="#eee6f5" BorderBrush="#eee6f5" Click="EnterEditor_Click" Tag="Game Quiz" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Cursor="Hand"/>
                
            </StackPanel>
        </Border>
        

        <!--Customized Quiz Title-->
        <Border Grid.Row="4" Grid.ColumnSpan="2" Margin="2 20 2 2" >

            <StackPanel x:Name="CustomizedQuizContainer"  >
                <TextBlock  Text="Your Quiz Mode: play customized quiz" TextWrapping="Wrap" FontWeight="Bold" FontSize="15" HorizontalAlignment="Left"  VerticalAlignment="Center"  Margin="20 8" />
            </StackPanel>
        </Border>

        <!--Feedback-->
        <Border   Grid.Row="6" Grid.ColumnSpan="2" Margin="2 20 2 2" >
            <TextBlock x:Name="CustomizedQuizFeedbackTextBlock" Text="" TextWrapping="Wrap" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        </Border>

        <!--Mix Quiz subtitle-->
        <Border Grid.Row="7" Grid.ColumnSpan="2" Margin="2 20 2 2" >
            <TextBlock Text="Mix Chosen Cateory" TextWrapping="Wrap" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        </Border>

        <!--Mix Quiz-->
        <Border Grid.Row="8"  Grid.ColumnSpan="2" Margin="0 5"  >
            <Button Content="Shuffle the Quiz" FontSize="20" FontWeight="Bold" Click="MixCategory_Click" Tag="Game Quiz" Foreground="White" Cursor="Hand">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2a1b7d" Offset="0.0"/>
                        <GradientStop Color="#b69bc5" Offset="0.25"/>
                        <GradientStop Color="#2a1b7d" Offset="0.75"/>
                        <GradientStop Color="#b69bc5" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>

                <Button.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2a1b7d" Offset="0.0"/>
                        <GradientStop Color="#b69bc5" Offset="0.45"/>
                        <GradientStop Color="#2a1b7d" Offset="0.75"/>
                        <GradientStop Color="#b69bc5" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.BorderBrush>
            </Button>
        </Border>

    </Grid>
</Page>
