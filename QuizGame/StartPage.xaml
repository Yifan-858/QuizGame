<Page x:Class="QuizGame.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizGame"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="400"
      Title="StartPage"
      Background="White">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Logo-->
        <Border Grid.Row="0"  Margin="2">
            <TextBlock Text="Quiz Game" FontSize="15" FontWeight="Black" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#c63719" />
        </Border>

        <!--Title-->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="2 8 2 2" VerticalAlignment="Center" >
            <TextBlock Text="Choose one category" TextWrapping="Wrap" FontWeight="Bold" FontSize="30" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
            <TextBlock Text="or shuffle the quiz!" TextWrapping="Wrap" FontWeight="Bold" FontSize="30" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        </StackPanel>

        <!--Default quiz subtitle-->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Margin="2 20 2 2" >
            <TextBlock Text="Built-in Quiz Category" TextWrapping="Wrap" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        </Border>

        <!--Default Quiz 1-->
        <Border Grid.Row="3"  Grid.Column="0"  Margin="0 5 5 5" >
            <Button Content="Snack Quiz" FontSize="20" FontWeight="Bold" Click="Category_Click" Tag="Snack Quiz" Foreground="White" Background="#c63719" BorderBrush="#c63719"/>
        </Border>

        <!--Default Quiz 2-->
        <Border Grid.Row="3"  Grid.Column="1" Margin="5 5 0 5" >
            <Button Content="World Game Quiz" FontSize="20" FontWeight="Bold" Click="Category_Click" Tag="Game Quiz" Foreground="White" Background="#c63719" BorderBrush="#c63719"/>
        </Border>

        <!--Quiz Editor-->
        <Border Grid.Row="4" Grid.ColumnSpan="2" Margin="2 20 2 2" >
            <TextBlock Text="Enter Quiz Editor to add quiz category" TextWrapping="Wrap" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        </Border>
        <Border Grid.Row="5" Grid.ColumnSpan="2" Margin="0 5">
            <Button Content="Quiz Editor" FontSize="20" FontWeight="Bold" Click="EnterEditor_Click" Tag="Game Quiz" Foreground="White" Background="#23074d" BorderBrush="#23074d" />
        </Border>

        <!--Customized Quiz subtitle-->
        <Border Grid.Row="6" Grid.ColumnSpan="2" Margin="2 20 2 2" >
            <TextBlock Text="Your Quiz Category" TextWrapping="Wrap" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        </Border>

        <!--Customized Quiz-->
        <ScrollViewer  Grid.Row="7"  Grid.ColumnSpan="2" Margin="0 5"  >
            <StackPanel x:Name="CustomizedQuizContainer"  >
               
            </StackPanel>
        </ScrollViewer>

        <!--Mix Quiz subtitle-->
        <Border Grid.Row="8" Grid.ColumnSpan="2" Margin="2 20 2 2" >
            <TextBlock Text="Mix Chosen Cateory" TextWrapping="Wrap" FontWeight="Bold" FontSize="18" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        </Border>

        <!--Mix Quiz-->
        <Border Grid.Row="9"  Grid.ColumnSpan="2" Margin="0 5"  >
            <Button Content="Shuffle the Quiz" FontSize="20" FontWeight="Bold" Click="Category_Click" Tag="Game Quiz" Foreground="White">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#c63719" Offset="0.0"/>
                        <GradientStop Color="#23074d" Offset="0.5"/>
                        <GradientStop Color="#6f86d6" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>

                <Button.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#c63719" Offset="0.0"/>
                        <GradientStop Color="#6f86d6" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.BorderBrush>
            </Button>
        </Border>

    </Grid>
</Page>
